@model Boox.ViewModels.RateBookViewModel

@{ ViewData["Title"] = "Rate"; }
<div class="row justify-content-center align-items-center">

    <form asp-action="Rate" method="post" class="box">
        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" disabled="disabled">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" class="form-control" disabled="disabled">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="form-label"></label><br>
            <input asp-for="Rating" type="radio" value="1" checked> 1
            <input asp-for="Rating" type="radio" value="2"> 2
            <input asp-for="Rating" type="radio" value="3"> 3
            <input asp-for="Rating" type="radio" value="4"> 4
            <input asp-for="Rating" type="radio" value="5"> 5
        </div>
        <a asp-action="ReadedBooks" class="btn btn-secondary">Powrót</a>
        <button class="btn btn-primary">Rate</button>
    </form>

    @section Scripts
{
        <partial name="_ValidationScriptsPartial" />
    }
</div>